<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    android:theme="@android:style/Theme.Holo.Dialog"
    tools:context=".NewRoomActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_shape">

        <ImageView
            android:id="@+id/img_new_room_activity"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/mediumBlue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name_room_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="Name"
            android:textColor="@color/lightPurple"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_new_room_activity" />

        <EditText
            android:id="@+id/et_name_room_activity"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="64dp"
            android:textColor="@color/black"
            android:background="@drawable/et_shape"
            android:ems="10"
            android:inputType="text"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_room_activity" />

        <TextView
            android:id="@+id/tv_add_image_new_room_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_a_picture"
            android:textColor="@color/lightPurple"
            app:layout_constraintBottom_toBottomOf="@+id/img_new_room_activity"
            app:layout_constraintEnd_toEndOf="@+id/img_new_room_activity"
            app:layout_constraintStart_toStartOf="@+id/img_new_room_activity"
            app:layout_constraintTop_toTopOf="@+id/img_new_room_activity" />

        <Button
            android:id="@+id/btn_create_room_activity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="Create"
            android:textColor="@color/lightPurple"
            android:background="@color/mediumGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/et_name_room_activity"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/et_name_room_activity"
            app:layout_constraintTop_toBottomOf="@+id/et_name_room_activity" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>